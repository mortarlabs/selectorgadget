{
  "manifest_version": 2,
  "icons": { "16": "icons/16x16.png",
             "48": "icons/48x48.png",
            "128": "icons/128x128.png" },
  "name": "SaverSage Scraping Assistant",
  "homepage_url": "http://www.saversage.com",
  "description": "CSS Selectors for Development",
  "version": "1.0",
  "permissions": [
    "tabs", 
    "http://*/*", 
    "https://*/*", 
    "webNavigation", 
    "webRequest", 
    "webRequestBlocking", 
    "proxy",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/action19x19.png",
      "38": "icons/action38x38.png"
    },
    "default_title": "SaverSage Scraping Assistant"
  }
}
